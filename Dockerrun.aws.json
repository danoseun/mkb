{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [

        {
            "name":"api",
            "image":"texplode/mkb-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },

        {
            "name":"redis",
            "essential": true,
            "image": "redis:latest",
            "memory": 128,
            "hostname": "redis",
            "portMappings": [
              {
                "containerPort": 6379,
                "hostPort": 6379
              }
            ]
          },
        {
            "name":"nginx",
            "image":"texplode/mkb-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort":80
                }
            ],
            "links":["api"],
            "memory": 128
        }

    ]
}